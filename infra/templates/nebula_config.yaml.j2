pki:
  ca: /etc/nebula/ca.crt
  cert: /etc/nebula/host.crt
  key: /etc/nebula/host.key

static_host_map:
  10.88.101.1:
  - 193.123.56.221:6969
  10.88.101.5:
  - 158.101.197.223:32243

lighthouse:
  am_lighthouse: false
  interval: 60
  hosts:
  - 10.88.101.1
  - 10.88.101.5

listen:
  host: 0.0.0.0
  port: 4242

punchy:
  punch: true
  respond: true

tun:
  dev: nebula1
  drop_local_broadcast: false
  drop_multicast: false
  tx_queue: 500
  mtu: 1380
  routes:
  unsafe_routes:

logging:
  level: error
  format: text

firewall:
  conntrack:
    tcp_timeout: 120h
    udp_timeout: 3m
    default_timeout: 10m
    max_connections: 100

  handshakes:
    try_interval: 1111
  outbound:
    - port: any
      proto: any
      host: any

  inbound:
    - port: any
      proto: icmp
      host: any

    - port: 22
      proto: tcp
      host: any
